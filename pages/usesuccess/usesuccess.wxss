/* pages/usesuccess/usesuccess.wxss */
page {
  background-color: #F7F9FC;
}

.use_info {
  font-weight: 700;
  color: #333333;
  font-size: 48rpx;
  text-align: center;
  margin: 80rpx 0;
}

.container {
  width: 670rpx;
  height: 250rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin: auto;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.title {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color: #666666;
  font-size: 28rpx;
  border-bottom: 2rpx #EAEAEA solid;
}

.content {
  width: 100%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.content view {
  color: #333333;
  font-size: 28rpx;
}
.bg_btn {
  position: absolute;
  bottom: 10%;
}