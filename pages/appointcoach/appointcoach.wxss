/* pages/appointcoach/appointcoach.wxss */
.coach-box {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}
.item {
  /* border-radius: 10px; */
  border: 1px solid #BDCDD6;
  /* display: flex; */
  width: 178rpx;
  text-align: center;
  align-items: center;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.coach-box .item:nth-child(3n) {
  margin-right: 0;
}
.item image {
  width: 102rpx;
  height: 102rpx;
  border-radius: 50%;
  margin-bottom: 8rpx;
}
.item .msg {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}
.item .line {
  width: 1px;
  height: 30rpx;
  background-color: #BDCDD6;
  margin-top: 4rpx;
}

.atcive {
  background-color: #2B9CE8;
  color: #fff;
  border: 1px solid #2B9CE8;
}
