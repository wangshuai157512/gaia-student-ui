/* pages/timepicker/timepicker.wxss */
.timePicker-con {
  position: relative;
  /* padding-bottom: 140rpx; */
}
.timePicker-con .week-con {
  width: 100%;
  padding: 10rpx 30rpx 20rpx 42rpx;
  box-sizing: border-box;
  background-color: #fff;
  white-space: nowrap;
}
.timePicker-con .week {
  width: 108rpx;
  text-align: center;
  display: inline-block;
  color: #999;
  border: 1px solid #BDCDD6;
  border-radius: 10rpx;
  font-size: 24rpx;
  padding-top:32rpx;
  margin-right: 12rpx;
}
.timePicker-con .week view {
  margin-bottom: 24rpx;
}
.timePicker-con .week .picker {
  font-size: 28rpx;
  color:#333;
  font-weight: 600;
}
.disabled {
  background-color: #F3F3F4!important;
}
.disabled .picker {
  color: #999!important;
  font-weight: normal!important;
}
.count {
  color:#7F96A5;
}
.activeWeek {
  background-color: #2B9CE8!important;
}
.activeWeek view {
  color: #fff!important;
}

.time-box {
  background-color: #fff;
  padding: 20rpx 42rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.time-box .time-con {
  display: flex;
  /* justify-content: space-between; */
  width: 100%;
  flex-wrap: wrap;
}

.time-box .title {
  color: #333;
  font-weight: 600;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.time-box .title .lump {
  width: 6rpx;
  height: 32rpx;
  background-color: #2B9CE8;
  margin-right: 8rpx;
}
.time-box  .time {
  width: 208rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  display: flex;
  justify-content: space-between;
  border-radius: 8rpx;
  background-color: #E8FBFE;
  font-size: 24rpx;
  color: #2B9CE8;
  padding: 0 8rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}
.time-box .time:nth-child(3n) {
  margin-right: 0;
}
.time-box  .time .surplus {
  color: #7F96A5;
}
.btn-con {
  height: 140rpx;
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.pay-btn {
  line-height: 80rpx;
  width: 670rpx;
  height: 80rpx;
  border-radius: 80rpx;
  margin: 20rpx auto;
  background: #2B9CE8;
  color: #FFFFFF;
  font-size: 40rpx;
  text-align: center;
}
.pob {
  position: absolute;
  left: 40rpx;
  bottom: 40rpx;
}