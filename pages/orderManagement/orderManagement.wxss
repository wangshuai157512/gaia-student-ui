/* pages/orderManagement/orderManagement.wxss */


.swiper-box {
  width: 100%;
}

.orderlength {
  width: 100%
}

.order-itembox {
  width: 100%;
}

.swiper-tab {
  width: 100%;
  display: -webkit-flex;
  display: flex;
  background: #fff;
}

.swiper-tab .swiper-tab-item {
  /* -webkit-box-flex: 1;
  flex: 1; */
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  position: relative;
}
.swiper-tab-item:first-child {
  margin-right:70rpx;
  margin-left: 60rpx;
}

.swiper-tab .active {
  color: #2072FD;

}

.swiper-tab-order {
  width: 100%;
  display: flex;
  justify-content: space-around;
  background: #fff;
  color: #5E676C;
  padding: 20rpx 0;
  box-sizing: border-box;
  white-space: nowrap;
}

.swiper-tab-order .swiper-tab-item-order {
  -webkit-box-flex: 1;
  display: inline-block;
  text-align: center;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  position: relative;
  background-color: #F0EEEE;
}

.swiper-tab-order .active {
  color: #2072FD;
  background-color: #DDFBFF;
}

.swiper-tab .active::after {
  display: block;
  content: '';
  width: 100%;
  height: 6rpx;
  background: #2072FD;
  position: absolute;
  bottom: 0;
}
.content {
  padding-bottom: 60rpx;
}
.content>view {
  width: 670rpx;
  /* height: 30rpx; */
  background: white;
  border-radius: 20rpx;
  background: #FFFFFF;
  margin: 20rpx auto 0;
  padding: 30rpx;
  box-sizing: border-box;
}

.nav-top {
  margin-top: 20rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
  color: #666666;
  font-size: 24rpx;
  border-top: 2rpx #EAEAEA solid;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav-top text {
  font-size: 32rpx;
}

.top-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.nav-long {
  font-size: 28rpx;
}

.top-item .pay-money {
  color: #E82B46;
  font-size: 28rpx;
  font-weight: 600;
}

.nav-long text {
  color: #5E676C;
}

.nav-time {
  font-size: 24rpx;
  padding-top: 10rpx;
  color: #666666;
  display: flex;
  justify-content: space-between;
}

.nodata image {
  width: 55%;
}

.nodata {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 150rpx;
}

.nodata view {
  width: 100%;
  text-align: center;
}
.go-pay {
    font-size: 24rpx;
    color: #EF8802;
    border-bottom:1px solid #EF8802;
    cursor: pointer;
}
.cancel-order {
  width: 136rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  background: #2B9CE8;
  color: #fff;
  border-radius: 21rpx;
}
