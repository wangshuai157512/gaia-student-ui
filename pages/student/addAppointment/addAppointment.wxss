/* pages/student/addAppointment/addAppointment.wxss */
.container {
  width: 100%;
}

.no_auth,
.not_jion_drvSchool {
  position: absolute;
  width: 100%;
  top: 45%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.no_auth .no_text,
.not_jion_drvSchool .no_text {
  font-family: 'Arial Normal', 'Arial';
  font-weight: 400;
  color: #F59A23;
  font-size: 14px;
  margin-bottom: 10px;
}

.no_auth .text-btn,
.not_jion_drvSchool .text-btn {
  color: #2072FD;
  font-size: 14px;
  font-family: 'Arial Normal', 'Arial';
  font-weight: 400;
}

.content {
  position: relative;
  width: 100%;
}

.content .adv_body {
  position: relative;
  margin: 15px;
  height: 130px;
  border-radius: 8px;
  background-color: #F2F2F2;
}

.content .adv_body .swiper-con {
  width: 100%;
  height: 130px;
  position: relative;
}

.content .adv_body .swiper-con image {
  width: 100%;
  height: 130px;
  border-radius: 8px;
}

.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.dots .dot {
  margin: 0 8rpx;
  width: 10rpx;
  height: 10rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all .6s;
}

.dots .dot.active {
  width: 32rpx;
  border-radius: 6rpx;
  height: 10rpx;
}

.content .form_body {
  background-color: #ffffff;
  margin: 5px 10px;
  border-radius: 13px;
  padding: 13px;
}

.content .fb-label {
  font-size: 12px;
  color: #7F7F7F;
  font-family: 'Arial Normal', 'Arial';
  font-weight: 400;
}

.content .fb-content {
  margin-top: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content .fb-content .fb-c-piker {
  width: 100%;
}

.content .fb-content .fb-c-rtimg {
  height: 15px;
  width: 15px;
}

.form_body-btn {
  margin: 10px 10px;
  height: 40px;
  line-height: 40px;
  color: #FFFFFF;
  background: inherit;
  background-color: rgba(22, 155, 213, 1);
}