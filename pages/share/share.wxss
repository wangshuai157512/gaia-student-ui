/* pages/share/share.wxss */
page{
    background: #F7F9FC;
    width: 100%;
    font-size: 30rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    color: #999;
}
.share-con {  
    padding: 84rpx 76rpx 120rpx 76rpx;
    box-sizing: border-box;
}
.share-con .share-box {
    padding: 60rpx 68rpx 50rpx 68rpx;
    box-sizing: border-box;
    background:#fff;
    text-align: center;
    width: 600rpx;
    height: 796rpx;
    position: relative;
}
.share-con .share-box .photo{
    width: 140rpx;
    height: 140rpx;
    border-radius: 70rpx;
    display: inline-block;
    overflow: hidden;
}
.share-con .share-box .title {
    margin-top: 60rpx;
    margin-bottom: 40rpx;
    color: #2072FD;
    font-weight: blod;
}
.share-con .share-box .record {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    width: 100%;
    text-align: left;
}
/* .share-con .share-box .record .record-l {
    width: 330rpx;
}  */
.share-con .share-box .record .record-r {
    width: 134rpx;
    line-height: 1.8;
} 
.share-con .share-box .line {
    position: absolute;
    left: 0;
    bottom: 110rpx;
    width: 600rpx;
    height: 94rpx;
    background: #F7F9FC;
}
.share-con .share-box .wisdom {
    margin-top: 90rpx;
    font-size: 22rpx;
    color: #333;
}
.share-con .share-bottom {
    text-align: center;
    position: absolute;
    bottom: 120rpx;
}
.share-con .share-bottom .tip {
    color: #2072FD;
    margin-bottom: 40rpx;
}

.pop-bg {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0,0,0,0.55);
}
.pop-bg .canvs-con {
    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    color: #666666;
    width: 600rpx;
    height: 790rpx;
    background: #F7F9FC;
    position: absolute;
    left: 76rpx;
    top: 80rpx;
    text-align: center;
    border-radius: 16rpx;
    padding: 40rpx 60rpx;
    box-sizing: border-box;
}
.canvs-con .title{
    font-size: 36rpx;
    color: #333;
    font-weight: blod;
    margin-bottom: 10rpx;
}
.canvs-con .photo-box {
    width: 440rpx;
    height: 366rpx;
    display: inline-block;
    background: #fff!important;
    margin-top: 65rpx;
    padding: 0 60rpx;
    box-sizing: border-box;
    border-radius: 12rpx;
}
.canvs-con .photo-box image {
    width: 108rpx;
    height: 108rpx;
    border-radius: 50%;
    margin-top: -34rpx;
}
.canvs-con .photo-box .finish {
    font-weight: blod;
    color: #2072FD;
    font-size: 30rpx;
    margin-top: 40rpx;
}
.canvs-con .photo-box .time {
    display: flex;
    justify-content: space-between;
    margin-top: 40rpx;
}
.canvs-con .photo-box .time .num {
    font-size: 32rpx;
    color: #333333;
    margin-bottom: 8rpx;
}
.canvs-con .code-box {
    display: flex;
    justify-content: space-between;
    font-size: 22rpx;
    text-align: left;
    margin-top: 82rpx;
}
.canvs-con .code-box .strive {
    color: #333333;
    margin: 12rpx 0;
}
.canvs-con .code-box image {
    width: 100rpx;
    height: 100rpx;
}
.canvs-con .line {
    position: absolute;
    left: 0;
    bottom: 158rpx;
    width: 600rpx;
    height: 74rpx;
    background: #000;
    opacity: 0.55;
}
.save-con {
    width: 750rpx;
    /* height: 476rpx; */
    background: #F7F9FC;
    border-radius: 20px 20px 0px 0px;
    position: fixed;
    left: 0;
    bottom: 0;
    text-align: center;
    padding: 30rpx 60rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    color: #666;
}
.save-con .share-friends {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 40rpx;
}
.save-con .save-img-box {
    display: flex;
    justify-content: space-around;
    margin-bottom: 30rpx;
}
.save-con .save-img-box button {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    padding: 0;
    border: 0;
    margin-bottom: 10rpx;
}
.save-con .save-img-box image {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
}
.save-con .bg_btn {
    background: #fff;
    font-size: 36rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    color: #666666;
    height: 80rpx;
    line-height: 80rpx;
}
.none {
    display: none;
}
.block {
    display: block;
}
