.left>view .money {
  color: #FC532F;
  font-size: 44rpx;
}

.left>view .date {
  color: #333333;
  font-size: 36rpx;
  margin-left: 20rpx;
}

.left>text {
  width: 120rpx;
  color: #999999;
  font-size: 26rpx;
  position: relative;
}

.left>text::after {
  content: '';
  width: 120rpx;
  height: 2rpx;
  background-color: #999999;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  left: 0;
}

.pay-item image {
  width: 84rpx;
  height: auto;
  position: absolute;
  top: 0;
  left: 0;
}

.pay-item image::after {
  content: '推荐';
  position: absolute;
  top: 4rpx;
  left: 18rpx;
  font-size: 24rpx;
  color: #FFFFFF;
}