.chart,
ec-canvas {
  width: 100%;
  height: 100%;
}

.swiper-tab {
  width: 100%;
  display: -webkit-flex;
  display: flex;
  position: fixed;
  top: 0;
  background: #fff;
  z-index: 999;
}

.swiper-tab .swiper-tab-item {
  -webkit-box-flex: 1;
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  position: relative;
}

.swiper-tab .active {
  color: #2072FD;

}

.swiper-tab .active::after {
  display: block;
  content: '';
  width: 70%;
  height: 6rpx;
  background: #2072FD;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  border-radius: 6rpx;
  transition: all 1s ease-in 1s;
}

.table-container {
  width: 670rpx;
  background: white;
  margin: 30rpx auto 0;
  border-radius: 8rpx;
  padding-bottom: 50rpx;
}

.chart-container {
  width: 670rpx;
  height: 774rpx;
  margin: 30rpx auto 0;
  position: relative;
}

.chart-tap {
  width: 100%;
  background: white;
  border-radius: 8rpx;
  position: absolute;
  top: 0;
  left: 0;
  backface-visibility: hidden;
}

.table-container .title {
  height: 120rpx;
  line-height: 120rpx;
  color: #333333;
  font-size: 30rpx;
  text-align: center;
}

.chart-container .title {
  height: 120rpx;
  line-height: 120rpx;
  color: #333333;
  font-size: 30rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
}

.chart-container .title view {
  color: #2072FD;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

.chart-container .title view image {
  width: 40rpx;
  height: auto;
  margin-left: 10rpx;
}

.table {
  width: 560rpx;
  margin: auto;
  border: 1rpx solid #EEEEEE;
}

.tr {
  display: flex;
  font-size: 26rpx;
  font-weight: 400;
}

.td {
  height: 80rpx;
  flex: 1;
  border: 1rpx solid #EEEEEE;
  line-height: 80rpx;
  text-align: center;
  color: #333333;
}

.tr:nth-child(1) {
  font-weight: 700;
  font-size: 28rpx;
  background: #FAFAFA;
}

.swiper {
  width: 100%;
  overflow: hidden;
}

.swiper-container {
  width: 300%;
  display: flex;
}

.swiper-item {
  width: 33.3333333%;
}

.back-tap {
  transform: rotateY(-180deg);
}