/* pages/placeorder/placeorder.wxss */
.banner {
  background: #D8F1FF;
  position: relative;
  height: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.banner>image {
  width: 242rpx;
  height: 230rpx;
}

.menu-container {
  width: 670rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  margin: auto;
  position: relative;
  top: -40rpx;
}
.menu-box {
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  background: white;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}

.menu-item {
  /* border-bottom: 2rpx solid #EEEEEE; */
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.menu-item view {
  display: flex;
  align-items: center;
}

.menu-item .ioc {
  width: 40rpx;
  height: auto;
  margin-right: 20rpx;
}

.menu-item .iocs {
  width: 50rpx;
  height: auto;
  transform: rotate(90deg);
}

.menu-item text {
  font-size: 30rpx;
  color: #666666;
}

.notice {
  width: 670rpx;
  height: 40rpx;
  background: linear-gradient(to right, #FFEBDC, rgba(255, 0, 0, 0));
  border-radius: 6rpx;
  position: absolute;
  bottom: 50rpx;
  z-index: 9;
  left: 0;
  right: 0;
  margin: auto;
  color: #D65C00;
  font-size: 22rpx;
  line-height: 40rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.notice image {
  width: 24rpx;
  height: auto;
  margin-right: 4rpx;
}

.bot {
  margin-top: -40rpx;
  padding-bottom: 40rpx;
}

.bot .pay-amount {
  display: flex;
  justify-content: center;
}

.pay-amount .left text {
  font-size: 70rpx;
  color: #ED5A01;
}

.pay-amount .right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 10rpx;
}

.pay-amount .right text {
  width: 100%;
  color: #999999;
  font-size: 20rpx;
}

.remind {
  display: flex;
  flex-wrap: wrap;
}

.remind view {
  width: 100%;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.remind .mark {
  color: #F36800;
}

.pay-btn {
  line-height: 80rpx;
  width: 670rpx;
  height: 80rpx;
  border-radius: 80rpx;
  margin: 20rpx auto;
  background: #2B9CE8;
  color: #FFFFFF;
  font-size: 40rpx;
  text-align: center;
}
.pob {
   position: absolute;
  bottom: 40rpx;
  left: 40rpx;
}

.checkTime {
  width: 100%;
  padding-left: 38rpx;
  border-left: 1px solid #08010217;
  box-sizing: border-box;
  margin: 30rpx 0 0 20rpx;
  position: relative;
}
.checkTimeItem {
  display: inline-block;
  vertical-align: middle;
  margin-left: 16rpx;
  background-color: #E8FBFE;
  color: #2B9CE8;
  width: 160rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  border-radius: 2px;
  margin-bottom: 10rpx;
  font-size: 24rpx;
}
.checkTimeBot {
  position: absolute;
  left: -2px;
  width: 4px;
  height: 4px;
  background: #B7F1FB;
  border-radius: 50%;
}
.right-input {
  width: 40%;
  text-align: right;
  position: absolute;
  right: 16rpx;
}